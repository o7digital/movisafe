---
import SitePage from '../../../layouts/SitePage.astro';
import '../../../styles/inner-pages.css';

const sectors = [
  { label: 'Restaurants', image: '/images/movisafe/pages/clientes_MOVI-09-150x150.webp' },
  { label: 'Hospitality', image: '/images/movisafe/pages/clientes_MOVI-08-150x150.webp' },
  { label: 'Pharmaceutical industry', image: '/images/movisafe/pages/clientes_MOVI-07-150x150.webp' },
  { label: 'Cosmetics industry', image: '/images/movisafe/pages/clientes_MOVI-06-150x150.webp' },
  { label: 'Wine and spirits', image: '/images/movisafe/pages/clientes_MOVI-05-150x150.webp' },
  { label: 'Manufacturing', image: '/images/movisafe/pages/clientes_MOVI-04-150x150.webp' },
  { label: 'Events', image: '/images/movisafe/pages/clientes_MOVI-03-150x150.webp' },
  { label: 'Aerospace', image: '/images/movisafe/pages/clientes_MOVI-02-150x150.webp' },
  { label: 'Luxury', image: '/images/movisafe/pages/clientes_MOVI_Mesa-de-trabajo-1-150x150.webp' },
  { label: 'Petrochemical industry', image: '/images/movisafe/pages/clientes_MOVI-10-150x150.webp' }
];
---

<SitePage
  title="Movisafe - Who We Are"
  description="Movisafe team and experience"
  active="quienes-somos"
  locale="en"
>
  <main class="page-main">
    <section class="page-hero" style="background-image:url('/images/movisafe/pages/shutterstock_131393735.webp')">
      <div class="container">
        <p class="page-hero-kicker">WHO WE ARE</p>
        <h1>INTEGRATED SECURITY EXPERTS</h1>
        <div class="page-divider"></div>
      </div>
    </section>

    <section class="page-section">
      <div class="container two-col">
        <div class="text-block">
          <img
            class="lead-icon"
            src="/images/movisafe/pages/maspeque-rj165pkbqjfjzyfelga1ujcadpqqwwhb7qid8n4cn4.webp"
            alt="Movisafe"
          />
          <p>
            Founded in Mexico City, <strong>Movisafe</strong> has supported the security needs of
            <strong>individuals, families</strong> and national and international companies since 2002.
          </p>
          <p>
            Led by experts with over 33 years of combined experience, our multilingual teams (Spanish, French,
            English, Portuguese) bring international field experience in sensitive environments.
          </p>
          <p>
            Our expertise covers personal and professional requirements, from <strong>risk prevention</strong> to
            crisis control.
          </p>
        </div>

        <div class="gallery-row">
          <img src="/images/movisafe/pages/somosESP-3.webp" alt="Movisafe team" loading="lazy" />
          <img src="/images/movisafe/pages/somosESP-1.webp" alt="Movisafe operations" loading="lazy" />
          <img src="/images/movisafe/pages/somosESP-2.webp" alt="Movisafe mission" loading="lazy" />
        </div>
      </div>
    </section>

    <section class="page-section page-section--alt">
      <div class="container">
        <h2 class="page-title">Our expertise covers these sectors</h2>
        <div class="section-divider"></div>

        <div class="icon-grid">
          {sectors.map((sector) => (
            <article class="icon-item">
              <img src={sector.image} alt={sector.label} loading="lazy" />
              <h3>{sector.label}</h3>
            </article>
          ))}
        </div>
      </div>
    </section>

    <section class="page-section">
      <div class="container" style="text-align:center;">
        <h2 class="page-title">Our Solutions</h2>
        <div class="section-divider"></div>
        <a class="btn-primary" href="/en/prevencion/">View solutions</a>
      </div>
    </section>
  </main>
</SitePage>
