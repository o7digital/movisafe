---
import SitePage from '../../../layouts/SitePage.astro';
import '../../../styles/inner-pages.css';
---

<SitePage
  title="Movisafe - Join Our Team"
  description="Form to join the Movisafe team"
  active="nuestro-equipo"
  locale="en"
>
  <main class="page-main">
    <section class="page-hero" style="background-image:url('/images/movisafe/pages/manos.webp');min-height:440px;">
      <div class="container">
        <p class="page-hero-kicker">CONTACT</p>
        <h1>JOIN OUR TEAM</h1>
        <div class="page-divider"></div>
        <p class="page-subtitle" style="color:#fff;max-width:620px;">
          Leave your details and we will contact you with more information.
        </p>
      </div>
    </section>

    <section class="page-section page-section--alt">
      <div class="container">
        <div class="dark-panel">
          <form class="form-grid" action="#" method="post">
            <div class="form-row">
              <input type="text" name="nombre" placeholder="Full name" required />
              <input type="email" name="email" placeholder="Email" required />
            </div>
            <div class="form-row">
              <input type="tel" name="telefono" placeholder="Phone" required />
              <input type="text" name="puesto" placeholder="Position of interest" />
            </div>
            <textarea name="mensaje" rows="5" placeholder="Message"></textarea>
            <div>
              <button class="btn-primary" type="submit">Send</button>
            </div>
          </form>
        </div>
      </div>
    </section>
  </main>
</SitePage>
