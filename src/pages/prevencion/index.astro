---
import SitePage from '../../layouts/SitePage.astro';
import '../../styles/inner-pages.css';

const services = [
  {
    title: 'Inteligencia de seguridad de negocio',
    image: '/images/movisafe/pages/prevencion3.webp',
    description:
      'Para directores de proyectos, inversionistas y responsables de seguridad. Informacion en tiempo real de condiciones por pais, estado, ciudad o region, con reportes periodicos y tendencias para decisiones de riesgo.'
  },
  {
    title: 'Asesoria personal a expatriados',
    image: '/images/movisafe/pages/prevencion2.webp',
    description:
      'Atencion personalizada para expatriados: briefing al arribo, sensibilizacion de habitos locales, apoyo en seleccion de domicilio y asistencia telefonica 24 horas con intervencion en Mexico, Queretaro y Celaya.'
  },
  {
    title: 'Estudio de personal',
    image: '/images/movisafe/pages/prevencion1.webp',
    description:
      'Evaluacion integral para recursos humanos y seguridad: pruebas psicometricas y antidoping, verificacion laboral, estudios socioeconomicos y revision de antecedentes no penales.'
  }
];
---

<SitePage
  title="Movisafe - Prevencion"
  description="Soluciones Movisafe en prevencion"
  active="prevencion"
>
  <main class="page-main">
    <section class="page-hero" style="background-image:url('/images/movisafe/pages/prevencionslider.webp')">
      <div class="container">
        <p class="page-hero-kicker">NUESTRAS SOLUCIONES EN</p>
        <h1>PREVENCION</h1>
        <div class="page-divider"></div>
      </div>
    </section>

    <section class="page-section">
      <div class="container">
        <p class="page-subtitle">
          Porque gobernar es anticipar, y porque la seguridad de sus colaboradores y de sus activos requiere
          preparacion permanente, Movisafe propone soluciones preventivas para riesgos operativos y humanos.
        </p>
        <div class="section-divider"></div>

        <div class="cards-grid">
          {services.map((service) => (
            <article class="feature-card">
              <img src={service.image} alt={service.title} loading="lazy" style="width:72px;margin-bottom:0.8rem;" />
              <h3>{service.title}</h3>
              <p>{service.description}</p>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
</SitePage>
